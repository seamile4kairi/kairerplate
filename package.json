{
  "name": "kairi_template",
  "version": "0.0.0",
  "private": "true",
  "description": "The website builder for/by Kairi KAWASAKI.",
  "author": "Kairi <seamile.rivercape@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prestart": "npm i",
    "start": "npm run build",
    "poststart": "npm run watch & npm run serve",
    "build": "npm run build:markup & npm run build:style & npm run build:script",
    "build:markup": "posthtml -i src/**/*.html -o dist/ -c posthtml.config.js",
    "build:style": "postcss src/**/*.css -d dist/styles/",
    "build:script": "rollup -c",
    "serve": "browser-sync start --server dist/ --open external --files dist/**",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "browser-sync": "^2.18.12",
    "postcss-cli": "^4.1.0",
    "postcss-cssnext": "^2.11.0",
    "postcss-import": "^10.0.0",
    "posthtml-cli": "^0.3.0",
    "posthtml-w3c": "^0.8.1",
    "rollup": "^0.43.0",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0"
  },
  "browserslist": {
    "production": [
      "last 2 Chrome versions",
      "last 2 Edge versions",
      "ie 11",
      "last 2 Firefox versions",
      "last 2 Safari versions",
      "last 2 iOS versions",
      "Android >= 4.4",
      "last 2 ChromeAndroid versions"
    ],
    "development": [
      ">1% in JP"
    ]
  }
}
