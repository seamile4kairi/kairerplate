{
  "name": "kairi_template",
  "version": "0.1.0",
  "private": "true",
  "description": "The website builder for/by Kairi KAWASAKI.",
  "author": "Kairi <seamile.rivercape@gmail.com>",
  "repository": "https://github.com/seamile4kairi/personal_template",
  "license": "MIT",
  "scripts": {
    "prestart": "npm i && npm run clean",
    "start": "npm run build",
    "poststart": "npm run serve",
    "prebuild": "npm i",
    "build": "npm run build:copy && npm run build:style && npm run build:script && npm run build:markup",
    "build:markup": "node posthtml.config.js",
    "build:style": "postcss src/**/*.css -d dist/styles/",
    "build:script": "rollup -c",
    "build:copy": "node copy.config.js",
    "build:production": "NODE_ENV=production npm run build",
    "clean": "node clean.config.js",
    "preserve": "npm i",
    "serve": "browser-sync start --config browsersync.config.js",
    "postversion": "npm run build:production && git add -A && git commit -m \"[clean] Output files for production\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "config": {
    "src": "src",
    "dest": "dist"
  },
  "stylelint": {
    "rules": {
      "font-family-name-quotes": "always-where-recommended",
      "font-weight-notation": "numeric"
    }
  },
  "devDependencies": {
    "browser-sync": "^2.18.13",
    "css-declaration-sorter": "^2.0.1",
    "fs-extra": "^4.0.1",
    "globby": "^6.1.0",
    "node-cmd": "^3.0.0",
    "postcss-cli": "^4.1.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-discard-empty": "^2.1.0",
    "postcss-import": "^10.0.0",
    "postcss-import-url": "^2.2.0",
    "postcss-nested": "^2.1.0",
    "postcss-reporter": "^5.0.0",
    "posthtml": "^0.9.2",
    "posthtml-hint": "^0.8.1",
    "posthtml-w3c": "^0.8.1",
    "rollup": "^0.45.2",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0"
  }
}
