{
  "name": "kairi_template",
  "version": "0.0.0",
  "private": "true",
  "description": "The website builder for/by Kairi KAWASAKI.",
  "author": "Kairi <seamile.rivercape@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prestart": "npm i",
    "start": "npm run build",
    "poststart": "npm run serve",
    "build": "npm run build:markup & npm run build:style & npm run build:script & npm run build:copy",
    "build:markup": "posthtml -i src/**/*.html -o dist/ -c posthtml.config.js --auto-off",
    "build:style": "postcss src/**/*.css -d dist/styles/",
    "build:script": "rollup -c",
    "build:copy": "node copy.config.js",
    "clean": "node clean.config.js",
    "serve": "browser-sync start --config browsersync.config.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "browser-sync": "^2.18.12",
    "css-declaration-sorter": "^2.0.1",
    "globby": "^6.1.0",
    "node-cmd": "^3.0.0",
    "node-fs-extra": "^0.8.2",
    "postcss-cli": "^4.1.0",
    "postcss-cssnext": "^2.11.0",
    "postcss-import": "^10.0.0",
    "postcss-import-url": "^2.2.0",
    "postcss-nesting": "^4.0.1",
    "postcss-reporter": "^4.0.0",
    "posthtml-cli": "^0.3.0",
    "posthtml-hint": "^0.8.1",
    "posthtml-w3c": "^0.8.1",
    "rollup": "^0.43.0",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "stylelint": "^7.12.0",
    "stylelint-config-standard": "^16.0.0"
  }
}
