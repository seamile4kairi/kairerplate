{
  "name": "kairi_template",
  "version": "0.0.0",
  "private": "true",
  "description": "The website builder for/by Kairi KAWASAKI.",
  "author": "Kairi <seamile.rivercape@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prestart": "npm run build",
    "start": "npm run watch & npm run serve",
    "build": "npm run build:markups & npm run build:styles & npm run build:scripts",
    "build:markups": "posthtml -i src/ -o dist/",
    "build:styles": "postcss -i src/**/*.css -d dist/",
    "build:scripts": "rollup -c",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "postcss-cli": "^4.1.0",
    "postcss-cssnext": "^2.11.0",
    "postcss-import": "^10.0.0",
    "posthtml-cli": "^0.3.0",
    "posthtml-w3c": "^0.8.1",
    "rollup": "^0.43.0",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0"
  },
  "posthtml": {
    "w3c": {}
  }
}
